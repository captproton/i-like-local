<h1>Editing site</h1>

<%= error_messages_for :site %>

<% form_for(:site, :url => habitat_site_path(@site), :html => { :method => :put }) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Url</b><br />
    <%= f.text_area :url %>
  </p>

  <p>
    <%= submit_tag "Update" %>
  </p>
<% end %>

<%= link_to 'Show', habitat_site_path(@habitat, @site) %> |
<%= link_to 'Back', habitat_sites_path %>